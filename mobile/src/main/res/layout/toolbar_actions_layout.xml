<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/top_bar"
    android:background="@color/bottom_menu_bar"
    style="@style/actionBarStyle"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/ic_action_home"
    android:visibility="gone"
    android:layout_marginTop="@dimen/_2sdp"
    android:background="@drawable/splash_logo_bitryt"
    android:layout_width="@dimen/_25sdp"
    android:layout_alignParentStart="true"
    android:layout_height="@dimen/_25sdp"
    android:contentDescription="@string/hint_home" />
    <ImageView
        android:id="@+id/bitryt_logo"
        android:background="@drawable/logo_small"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/_20sdp"
        android:contentDescription="@string/hint_home" />
    <ImageView
    android:id="@+id/ic_action_search"
    android:background="@drawable/ic_action_search"
    android:layout_width="@dimen/_25sdp"
    android:visibility="invisible"
    android:layout_alignParentEnd="true"
    android:layout_height="@dimen/_25sdp"
    android:contentDescription="@string/hint_search" />
</RelativeLayout>